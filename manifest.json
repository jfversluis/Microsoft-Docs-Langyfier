{
    "name": "Langyfier",
    "version": "2.0",
    "description": "Stop automatic translation from the Microsoft Docs/Learn to an unwanted language.",
    "manifest_version": 3,
    "permissions": [
        "webNavigation",
        "declarativeContent",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "https://learn.microsoft.com/",
        "https://docs.microsoft.com/"
    ],
    "background": {
        "service_worker": "app/background.js"
    },
    "options_page": "app/settings.html",
    "action": {
        "default_popup": "app/popup.html",
        "default_icon": {
            "16": "img/icon16.png",
            "32": "img/icon32.png",
            "48": "img/icon48.png",
            "128": "img/icon128.png"
        }
    },
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    }
}